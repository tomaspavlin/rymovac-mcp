{
  "name": "@rymovac/mcp",
  "version": "1.0.7",
  "type": "module",
  "description": "MCP server for finding Czech rhymes using rymovac.cz API",
  "keywords": [
    "mcp",
    "rhymes",
    "czech",
    "poetry",
    "rymovac"
  ],
  "author": "Tomas Pavlin - Rymovac (https://rymovac.cz)",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "rymovac-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomaspavlin/rymovac-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tomaspavlin/rymovac-mcp/issues"
  },
  "homepage": "https://github.com/tomaspavlin/rymovac-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
